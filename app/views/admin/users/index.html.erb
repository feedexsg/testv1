<h1>All Users</h1>
<%= link_to "Add New", new_admin_user_path %>

<table>
	<tr>
		<th>User Name</th>
		<th>Email</th>
		<th>Colony</th>
		<th>Credits YTD</th>
		<th></th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.name, edit_admin_user_path(user) %></td>
			<td><%= user.email %></td>
			<td><%= user.colony %></td>
			<td><%= user.total_credits %></td>
			<td><%= link_to 'Edit Credits', credits_admin_user_path(user) %></td>
		</tr>
	<% end %>
</table>
