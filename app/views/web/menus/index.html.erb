			// 	c.style.visibility = c.style.visibility =='hidden' ? 'visible' :'hidden';

			// }
			</script>
		</div>
		<div class = 'div2' ng-if = 'name.step ==2'>
			<table>
				<tr ng-repeat='food in name.foodselect'><td>{{food.name}}</td></tr>
			</table>
		</div>
		<div class = 'div2' ng-if = 'name.step ==3'>
				
		</div>
		<div class = 'div2' ng-if = 'name.step ==4'>
			<table>
				<tr ng-repeat='food in name.foodselect'><td>{{food.name}}4444444</td></tr>
			</table>
		</div>
	</div>
	<div  class='div1' ng-if='name.divshow == 2'>
		<div id='remaining'>
			<div id='remainword'>
				<p id='remainvalue'>REMAINING VALUE</p>
				<P id='remaindollar'>$ 12.00</p>
				</div>
			</div>
			<div id='topup'>
				<div id='topuppanel'>
					<p id='topupword'>TOP-UP AMOUNT</p>
					<button id='topupbtn'>$10 MINUMUM</button>
				</div>

			</div>

		</div>
		<div  class='div1' ng-if='name.divshow == 3'>
			<div>
				EMAIL ADDRESS
				<input placeholder='someone@somewhere.com'>
