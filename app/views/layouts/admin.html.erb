<!DOCTYPE html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
		<title>Feedex Admin CMS</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>

	<body>
		<div id="container">
			<div id="mainmenu">
				<div class="feedextopmenubg"></div>
				<ul class="feedextopmenu">
					<li class="<%= active_class(['admin/items']) %>"><%= link_to "Content Management", admin_items_path %></li>
					<li><%= link_to "Credit Management", '#' %></li>
					<li class="<%= active_class(['admin/orders', 'admin/colonies', 'admin/delivery_locations']) %>"><%= link_to "Order Management", admin_orders_path %></li>
					<li class="<%= active_class(['admin/users']) %>"><%= link_to "User Management", admin_users_path %></li>
				</ul>
				<div class="feedexsecmenubg"></div>
				<ul class="secmenu contentmanagement items">
					<li><%= link_to "Today's Menu" %></li>
					<li><%= link_to "All Items", admin_items_path %></li>
				</ul>	
				<ul class="secmenu creditmanagement credits">
					<li><%= link_to "Dashboard" %></li>
				</ul>
				<ul class="secmenu ordermanagement orders colonies delivery_locations">
					<li><%= link_to "Today's Orders" %></li>
					<li class="<%= active_class(['admin/orders']) %>"><%= link_to "Orders History", admin_orders_path %></li>
					<li class="<%= active_class(['admin/colonies']) %>"><%= link_to "Colonies", admin_colonies_path %></li>
					<li class="<%= active_class(['admin/delivery_locations']) %>"><%= link_to "Delivery Locations", admin_delivery_locations_path %></li>
				</ul>
				<ul class="secmenu usermanagement users">
					<li><%= link_to "All Users" %></li>
				</ul>
			</div>
			<% [:notice, :error].each do |msg| %>
				<% if flash[msg].present? %>
					<div class="flash <%= msg.to_s %>">
						<%= flash[msg] %>
					</div>
				<% end %>
			<% end %>
			<%= yield %>
		</div>
	</body>
	<script>
			$('ul.secmenu.<%= active_ul %>').show();
	</script>
</html>
