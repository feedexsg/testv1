<div>
	<%= f.label "User Name" %>
	<%= f.text_field :name %>
	<%= inline_errors(user, :name) %>
</div>
<div>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<%= inline_errors(user, :email) %>
</div>
<div>
	<%= f.label :colony %>
	<%= f.text_field :colony %>
	<%= inline_errors(user, :colony) %>
</div>
<% if user.new_record? %>
	<div>
		<%= f.label "Password" %>
		<%= f.password_field :password %>
		<%= inline_errors(user, :password) %>
	</div>
	<div>
		<%= f.label "Confirm Password" %>
		<%= f.password_field :password_confirmation %>
		<%= inline_errors(user, :password_confirmation) %>
	</div>
<% else %>
	<div>
		<%= f.label "Credits YTD" %>
		<%= user.total_credits %>
	</div>
	<div>
		<%= f.label "Credits History" %>
		<table>
			<tr>
				<th>Date</th>
				<th>Amount</th>
			</tr>
			<% user.credits.each do |cr| %>
				<tr>
					<td><%= cr.created_at.strftime("%d %b, %Y") %></td>
					<td><%= number_to_currency(cr.amount) %></td>
				</tr>
				<% end %>
		</table>
	</div>
<% end %>
