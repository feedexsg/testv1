<div id="loginbox">
	<h1>Feedex Admin Panel</h1><hr />
	<%= form_tag admin_sessions_path, id: 'loginform' do |f| %>
		<%= label_tag "Username" %><br>
		<%= text_field_tag :email, "", id: 'username' %><br>
		<%= label_tag "Password" %><br>
		<%= password_field_tag :password, "", id: 'password' %><br><br>
		<%= submit_tag "Submit", :class => 'loginbutton' %>
	<% end %>
</div>
