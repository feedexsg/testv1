<body ng-controller="maincontroller" id = 'menubody'>
	<!--fixed items-->

	<div id='navi'>
		<div id='navicover'>
			<img id = 'logocopy' src="/assets/logo_copy.png">
			<table id='navitable'>
				<tr>
					<td><button  ng-click="name.test(1)"  onclick='classchange(this)' class='navibuttonc'>Today's Menu</button></td>
				</tr>
				<tr >
					<td><button  ng-click="name.test(2)"  onclick='classchange(this)' class='navibutton'>My Wallet</button></td>
				</tr>
				<tr>

					<td>
						<button ng-click="name.test(3)"  onclick='classchange(this)' class='navibutton'>Settings</button>
					</td>
				</tr>
				<tr>
					<td><button ng-click="name.test(4)"  onclick='classchange(this)' class='navibutton'>Log Out</button></td>
				</tr>
			</table>
			<script>
				function classchange(obj) {
					var a = document.getElementsByClassName('navibuttonc');
					a[0].className = 'navibutton';
					obj.className = 'navibuttonc';
				}
			</script>
		</div>
	</div>

	<div id= 'back'>	
		
