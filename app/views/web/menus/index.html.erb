<!DOCTYPE html>
<html ng-app='web'>
<head>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<link rel="stylesheet" type="text/css" href="/assets/menus.css">
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.14/angular-animate.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.14/angular-animate.js"></script>
	<%= csrf_meta_tags %>
</head>
<body ng-controller="maincontroller">
	<!--fixed items-->
	<div id='navi'>
		<ul>
			<li>
				Today's Menu
			</li><br>
			<li>
				My Wallet
			</li><br>
			<li>
				Settings
			</li><br>
			<li>
				Log Out
			</li><br>
		</ul>
	</div>

	<div id= 'back'>	
		<img id = 'logocopy' src="/assets/logo_copy.png">
		<button ng-click="name.show = !name.show" onclick="move()">Button</button>
		<div class = 'sample-show-hide' ng-if="name.show">Hello World</div>	
		<p>{{name.mainleng}} is the  main length</p>
		<p>{{name.sideindex}} is the side index</p>
		<p>{{name.mainindex}} is the main index</p>
		<p>{{name.mainimage.original_url}} this is the url</p>
		<p>this is the side url         {{name.sideimage.original_url}} </p>
		
	</div>
	<script type="text/javascript">
	function move() {
		var a = document.getElementById('back')
		var b = document.getElementById('logocopy')
		a.style.left == "200px" ? a.style.left = '0px' : a.style.left = '200px';
		b.style.left == "220px" ? b.style.left = '20px' : b.style.left = '220px';
		a.style.zIndex== '9' ? a.style.zIndex=1 : a.style.zIndex = 9 ;
	}
	</script>
	<div id = "content">
		<div id = 'side' >
					<button class = 'imgbtn' class='left' ng-click='name.sideindex = name.sideindex -1' ng-if='!name.check(0,0)'>LEFT</button>
					<img class= 'pic' id = 'menusidepic' ng-src={{name.sideimage.original_url}}>
					<button class = 'imgbtn' class='right' ng-click='name.sideindex = name.sideindex +1' ng-if='!name.check(0,1)'>RIGHT</button>
		</div>
		<div id = 'main' >
				 	<button class = 'imgbtn' class='left' ng-click='name.mainindex = name.mainindex -1' ng-if='!name.check(1,0)'>LEFT</button>
					<img class= 'pic' id= 'menumainpic' ng-src={{name.mainimage.original_url}}>
					<button class = 'imgbtn' class='right' ng-click='name.mainindex = name.mainindex +1' ng-if='!name.check(1,1)'>RIGHT</button>
		</div>
	</div>
</body>
</html>