<!DOCTYPE html>
<html ng-app='web'>
<head>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<link rel="stylesheet" type="text/css" href="/assets/menus.css">
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.14/angular-animate.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.14/angular-animate.js"></script>
	<%= csrf_meta_tags %>
</head>
<body ng-controller="maincontroller" id="web">
	<img id = 'logocopy' src="/assets/logo_copy.png">
	<button ng-click="name.show = !name.show">Button</button>
	<div class = 'sample-show-hide' ng-if="name.show">Hello World</div>
	<div id= "cover" class ='cover'>
		{{1+1}}
		{{name.side}}
		<div id = 'side' >
			<table>
				<tr >
					<td ng-repeat="pic in name.side"><img class= 'menusidepic' src={{pic}}></td>
				</tr>
			</table>
		</div>
		<div id = 'main' >
			<table>
				<tr >
					<td ng-repeat="pic in name.main"><img class= 'menumainpic' src={{pic}}></td>
				</tr>
			</table>
		</div>
	</div>
</body>
</html>